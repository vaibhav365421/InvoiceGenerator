@model InvoiceGenerator.Models.Invoice

@{
    ViewBag.Title = "Delete Invoice";
}

<h2>Delete Invoice</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this invoice?
</div>

<dl class="row">
    <dt class="col-sm-2">Invoice Code</dt>
    <dd class="col-sm-10">@Model.InvoiceCode</dd>

    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.CustomerName</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.TotalAmount</dd>
</dl>

@using (Html.BeginForm("Delete", "Invoice", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}

